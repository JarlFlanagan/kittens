<%= if user_signed_in? %>
	<%= form_for(@kitten) do |f| %>
	  <% if @kitten.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@kitten.errors.count, "error") %> prohibited this kitten from being saved:</h2>

	      <ul>
	      <% @kitten.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field">
	    <%= f.label :user_id %><br>
	    <%= current_user.name %>
	    <%= f.hidden_field :user_id, :value => current_user.id %>
	  </div>
	  <div class="field">
	    <%= f.label :link %><br>
	    <%= f.text_field :link %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
<% else %>
	<%= link_to "Sign in",new_user_session_path %>
<% end %>
