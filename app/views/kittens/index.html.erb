<div class="row">
  <div class="large-12 columns">
  <p id="notice"><%= notice %></p>
  <h1>Look! Kittens!</h1>
  </div>
</div>

<div class="row">
      <% @kittens.each do |kitten| %>
        <div class="large-4 columns">
          <span><i class="fa fa-user"></i>User:<%= kitten.user.name %></span>
          <image src="<%= kitten.link %>" />
          <span>Comments:<%= kitten.comments_id %></span>
          <%= link_to 'Show', kitten %>
          <%= link_to 'Edit', edit_kitten_path(kitten) %>
          <%= link_to 'Destroy', kitten, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
      <% end %>
</div>

<div class="row">
  <div class="large-12 columns">
    <%= link_to 'New Kitten', new_kitten_path %>
  </div>
</div>